  <link rel="stylesheet" href="/css/events.css">
</head>

<body>
  <%- include('navbar'); %>
    <div class="row">
      <div class="col text-center ">
        <h1 style="font-size:5vw;" class="text-success text-center mb-4">Approval List</h1>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <%data.forEach((x)=>{%>
          <div class=" col-12 col-xl-3 col-lg-4 col-md-4 mb-2">
            <div class="bg-white rounded  shadow-sm">
              <p class="small mb-0  text-center "><span class="font-weight-bold ">
                  <%=x.department%>
                </span></p>
              <img src="<%=x.imgurl%>" class="img-fluid card-img-top">
              <div class="p-3">
                <h5> <a href="#" class="text-dark">
                    <%=x.eventname%>
                  </a></h5>
                <p class="small text-muted mb-0">
                  <%=x.subname%>
                </p>
                <div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4">
                  <a class="btn small mb-0" href="/approve/<%=x.id%>"><span class="font-weight-normal"
                      style="color: red">Approve</span></a>
                  <div class="badge  font-weight-normal"><a href="/deleteapproval/<%=x.id%>"
                      class="btn material-icons float-right">&#xE872;</a></div>
                </div>
              </div>
            </div>
          </div>

          <%})%>
      </div>
</body>
