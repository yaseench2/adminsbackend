<%- include('alumninavbar'); %>

  <body class="clr1">

    <h1 style="font-size: 5vw;" class="text text-center mb-4">Edit Updates</h1>
    <div class="container shadow">
      <form action="/alumni/alumnieditscroll/<%=edit2.textname%>" method="post" enctype="multipart/form-data">
        <input type="hidden" name="eid" value="<%=edit2.id%>">
        <div class="row">
          <div class="col-25">
            <label class="ml-4 text-primary ">Updates </label>
          </div>
          <div class="col-75">
            <input type="text" class="mr-2" name="textname" value="<%=edit2.textname%>" required>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label class="ml-4 text-primary">Enter Link</label>
          </div>
          <div class="col-75">
            <input type="text" name="Link" value="<%=edit2.Link%>" required>
          </div>
        </div>
        <div class="row">
          <div class="col-25">
            <label></label>
          </div>
          <div class="col-75">
            <input type="submit" value="Update" class="mt-3 mr-3">
          </div>
        </div>
      </form>
    </div>
