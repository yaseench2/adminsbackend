<style>
  .button_outer {
    background: #e4e5f2;
    border-radius: px;
    text-align: center;
    height: 30px;
    width: 180px;
    position: relative;
    overflow: hidden;
  }

  .btn_upload {
    padding: 17px -9px 12px;
    color: rgb(0, 0, 0);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .btn_upload input {
    position: absolute;
    width: 100%;
    cursor: pointer;
    opacity: 0;
  }

