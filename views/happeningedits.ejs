<body>

  <h1 style="font-size: 5vw;" class="text text-center mb-2">Add Events</h1>
  <div class="container shadow">
    <form action="/" method="post" enctype="multipart/form-data">
      <div class="row">
        <div class="col-25">
          <label for="fname" class="ml-4">Function Name</label>
        </div>
        <div class="col-75">
          <input type="text" id="fname" name="head" value="" required>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label class="ml-4">Sub Name</label>
        </div>
        <div class="col-75">
          <input type="text" id="fname" name="text" value="" required>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label class="ml-4">Link</label>
        </div>
        <div class="col-75">
          <input type="text" id="fname" name="link" value="" required>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label class="ml-4">Active</label>
        </div>
        <div class="col-75">
          <input id="chkToggle1" name="cstatus" type="checkbox" data-toggle="toggle">
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label class="ml-4">Image Upload</label>
        </div>
        <div class="col-75 dropzone mt-2">
          <div class="button_outer shadow">
            <div class="btn_upload ">
              <input type="file" id="fileInput" name="photo" required>
              Upload Image
            </div>
            <div class="processing_bar"></div>
            <div class="success_box"></div>
          </div>
          <p class="text-danger mt-2" id="imgwar"> </p>
        </div>
      </div>
      <div class="row">
        <div class="col-25">
          <label></label>
        </div>
        <div class="col-75">
          <input type="submit" value="upload" class="mt-3 mr-3">
        </div>
      </div>
    </form>
  </div>
</body>
<script>
  fileInput.addEventListener("change", function () {
    const fileSize = fileInput.files.item(0).size;
    const fileMb = fileSize / 1024
    const reader = new FileReader();

    reader.readAsDataURL(fileInput.files[0]);
    reader.onload = (e) => {
      const image = new Image();
      image.src = e.target.result;
      image.onload = (e) => {
        const height = e.target.height;
        console.log(height);
        const width = e.target.width;
        console.log(width)
        if (!(height == width)) {
          document.getElementById('fileInput').value = ''
          document.getElementById('imgwar').innerText = 'expected sqaure resolution'
        }
        else {
          console.log(fileInput.files.item(0).size);
          if (fileMb >= 160) {
            document.getElementById('fileInput').value = ''
            document.getElementById('imgwar').innerText = 'size is max'
          }
        }
      };
    };
  });

</script>

</html>